<div class="container1">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <h5>Directions:</h5>
  <p>{{directions}}</p>
</div>

<div class="container1">
  <h5>comments</h5>

  {{#each comments as |comment| }}
  <div class="container1">
    <p>
    {{comment.body}}
    </p>
    <p>
    by {{comment.user.username}} at <span id="comment-date">{{comment.createdAt}}</span>
    </p>
</div>
{{/each}}


<form class="form new-comment-form">
  <div class="form-group">
    <h6 for="project-desc">Comment</h6>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit Comment</button>
  </div>
</form>
</div>
</div>

<script src="/js/comment.js"></script>
<script src="/js/formatDate.js"></script>